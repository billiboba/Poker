@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Poker Game";
}

<div class="body">
    <h1>Welcome to Poker Game!</h1>

    <label for="loginModalToggle" class="btn-primary">
        <img src="~/Pictures/start.png" alt="Start Game" />
    </label>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="register-prompt">
            <p>New here? Register now to track your balance and enjoy the game!</p>
            <a href="/Account/Register" class="btn-register">Register</a>
        </div>
    }

    <input type="checkbox" id="loginModalToggle" class="modal-toggle" hidden />
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <label for="loginModalToggle" class="close">&times;</label>
            <h2>Login to Play</h2>
            <form method="post" action="/Account/Login">
                <div class="form-group">
                    <label for="Username">Username</label>
                    <input type="text" id="Username" name="Username" placeholder="Enter your username" required />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" placeholder="Enter your password" required />
                </div>
                <button type="submit" class="btn-login">Login</button>
            </form>
        </div>
    </div>

    <input type="checkbox" id="playerCountModalToggle" class="modal-toggle" hidden />
    <div id="playerCountModal" class="modal">
        <div class="modal-content">
            <label for="playerCountModalToggle" class="close">&times;</label>
            <h2>Enter the number of players</h2>
            <form method="post" action="/Game/StartGame">
                <div class="form-group">
                    <input type="number" id="playerCount" name="playerCount" min="2" max="10" placeholder="Number of players" required />
                </div>
                <button type="submit" class="btn-login">Start Game</button>
            </form>
        </div>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.4);
        padding-top: 60px;
    }

    /* Стили для модального содержимого */
    .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        position: relative;
    }

    /* Крестик для закрытия окна */
    .close {
        color: #aaa;
        font-size: 28px;
        font-weight: bold;
        position: absolute;
        top: 10px;
        right: 25px;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
        }

    /* Стиль для кнопки входа */
    .btn-login {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
    }

        .btn-login:hover {
            background-color: #45a049;
        }

    /* Когда чекбокс активен, показываем модальное окно */
    #loginModalToggle:checked + .modal {
        display: block;
    }

    #playerCountModalToggle:checked + .modal {
        display: block;
    }
</style>
