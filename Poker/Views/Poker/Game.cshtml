@model Poker.Models.GameModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user-info">
    <h2>@Model.Player.Username</h2>
    <p>Balance: $@Model.Player.Balance</p>
</div>
<div class="game-board">
    <img src="~/Pictures/pokerTable.png" alt="Table" class="table" />
    @foreach (var card in Model.Cards)
    {
        <img src="~/Pictures/@card" alt="Card" class="card front-card @Model.GetCardPositionClass(card)" />
    }

    @for (int i = 0; i < Model.BackCards.Count; i++)
    {
        <img src="~/Pictures/@Model.BackCards[i]" alt="Back Card" class="card back-card @Model.GetBackCardPositionClass(Model.BackCards[i], i)" />
    }
    <div class="game-actions">
        <button class="btn btn-check" type="button" onclick="handleCheck()">Check</button>
        <button class="btn btn-fold" type="button" onclick="handleFold()">Fold</button>
        <button class="btn btn-raise" type="submit">Raise</button>
        @* <form asp-action="Raise" method="post">
            <input type="number" name="amount" placeholder="Enter amount" required />
            <button class="btn btn-raise" type="submit">Raise</button>
        </form> *@
    </div>
</div>
